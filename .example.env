# Copy this to .env and fill in your values

# ===================================
# Database Configuration
# ===================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kleff_auth
DB_USER=postgres
DB_PASS=your-secure-password-here

# ===================================
# JWT Configuration
# ===================================
JWT_ISSUER=http://localhost:8080

# ===================================
# OAuth Configuration
# ===================================
# Generate a secure 32-byte key with: openssl rand -base64 32
OAUTH_STATE_KEY=12345678901234567890123456789012

# ===================================
# OAuth Providers (Optional)
# ===================================
